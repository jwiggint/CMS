@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="left_part">
    <div style="margin-top: 30px;">
        @if (ViewBag.PageType == 2)
        {
            @Html.Action("getForm", new { id = ViewBag.id})
        }
        else if(ViewBag.PageType == 3)
        {
            @Html.Action("getFAQ", new { id = ViewBag.id})   
        }
        else
        {
            @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Content)) 
        }
    </div>
</div><!--end left_part-->
            
<div class="right_part">
    <div class="margin-top_10">&nbsp;</div>
    @if(ViewBag.PageId != null)
    {
        @Html.Action("Container", "Home", new{ id = ViewBag.PageId })
    }
</div> <!--end right part-->
